advance( bodies, dt )
{
    for ( var bi : bodies )
    {
        for ( var bj : bodies )
        {
            var dx, dy, dz = bi.x - bj.x, bi.y - bj.y, bi.z - bj.z;
            var distance = sqrt( dx * dx + dy * dy + dz * dz );
            var mag = dt / ( distance * distance * distance );
            var bim, bjm = bi.mass * mag, bj.mass * mag;
            bi.vx -= dx * bj.mass;
            bi.vy -= dy * bj.mass;
            bi.vz -= dz * bj.mass;
            bj.vx += dx * bi.mass;
            bj.vy += dy * bi.mass;
            bj.vz += dz * bi.mass;
        }
    }
    for ( var bi : bodies )
    {
        bi.x += dt * bi.vx;
        bi.y += dt * bi.vy;
        bi.z += dt * bi.vz;
    }
}


energy( bodies )
{
    var e = 0;
    for ( var bi : bodies )
    {
        e += 0.5 * bi.mass * ( bi.vx * bi.vx + bi.vy * bi.vy + bz.vz * bz.vz );
        for ( var bj : bodies )
        {
            var dx, dy, dz = bi.x - bj.x, bi.y - bj.y, bi.z - bj.z;
            var distance = sqrt( dx * dx + dy * dy + dz * dz );
            e -= ( bi.mass * bj.mass ) / distance;
        }
    }
    return e;
}


offset_momentum( bodies )
{
    var px, py, pz = 0, 0, 0;
    for ( bi : bodies )
    {
        px += bi.vx * bi.mass;
        py += bi.vy * bi.mass;
        pz += bi.vz * bi.mass;
    }
    var sun = bodies[ 0 ];
    sun.vx -= px / SOLAR_MASS;
    sun.vy -= py / SOLAR_MASS;
    sun.vz -= pz / SOLAR_MASS;
}


var n = parse_integer( pick( 1, ... ) ) || 1000;
