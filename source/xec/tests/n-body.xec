var PI = 3.141592653589793;
var SOLAR_MASS = 4 * PI * PI;
var DAYS_PER_YEAR = 365.24;


body
{
    var x, y, z;
    var vx, vy, vz;
    var mass;
    
    this( _x, _y, _z, _vx, _vy, _vz, _mass )
    {
        x, y, z     = _x, _y, _z;
        vx, vy, vz  = _vx, _vy, _vz;
        mass        = _mass;
    }
}


var bodies =
[
    // Sun.
    new body( 0, 0, 0, 0, 0, 0, SOLAR_MASS ),
    
